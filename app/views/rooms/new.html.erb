      </div>
      <div class='chat-room-form__field--right'>
        <%= f.text_field :name, class: 'chat__room_name chat-room-form__input', placeholder: 'ツイートを入力してください'%>
      </div>
    </div>
    <div class='chat-room-form__field'>
    </div>

    <%
